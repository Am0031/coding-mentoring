      <div>
        <select class="form-select mb-3" id="availability" aria-label="availability">
          <option>Select availability*</option>
          <option {{#if (isEqualTo user.availability)}} selected {{/if}}value="weekdays">Weekdays</option>
          <option {{#if (isEqualTo user.availability)}} selected {{/if}}value="weekends">Weekends</option>
          <option {{#if (isEqualTo user.availability)}} selected {{/if}}value="both">Both</option>
        </select>
      </div>

      <div>
        <select class="form-select mb-3" id="collaborationFormat" aria-label="collaborationFormat">
          <option>Select collaboration format*</option>
          <option {{#if (isEqualTo user.collaborationFormat)}} selected {{/if}} value="online">Online</option>
          <option {{#if (isEqualTo user.collaborationFormat)}} selected {{/if}} value="in-person">In-Person</option>
          <option {{#if (isEqualTo user.collaborationFormat)}} selected {{/if}} value="hybrid">Hybrid</option>
        </select>
      </div>
      
      <div>
        <select class="form-select mb-3" id="location" aria-label="location">
          <option>Select location*</option>
          <option {{#if (isEqualTo user.location)}} selected {{/if}} value="birmingham">Birmingham</option>
          <option {{#if (isEqualTo user.location)}} selected {{/if}} value="london">London</option>
          <option {{#if (isEqualTo user.location)}} selected {{/if}} value="manchester">Manchester</option>
        </select>
      </div>

      <div class="mb-3">
        <input
          type="text"
          class="form-control"
          id="personalGoal"
          placeholder={{user.personalGoal}}
        />
      </div>

      <div class="mb-3">
        <input
          type="text"
          class="form-control"
          id="profileImageUrl"
          placeholder={{#if (user.profileImageUrl)}} user.profileImageUrl {{else}}"Enter profile image URL (optional)"{{/if}}
        />
      </div>

      <div class="mb-3">
        <input
          type="text"
          class="form-control"
          id="gitHubUrl"
          placeholder={{#if (user.gitHubUrl)}} user.gitHubUrl {{else}}"Enter GitHub URL (optional)"{{/if}}
        />
      </div>

      <div id="edit-error"></div>

      <div class="mb-3 text-center">
        <button type="submit" class="btn btn-primary" id="save-edit-btn" value={{userType}}>Save</button>
      </div>
      <div class="mb-3 text-center error-text">
        <a href="/dashboard">Cancel</a>
      </div>

    </form>
