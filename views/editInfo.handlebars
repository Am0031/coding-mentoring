<main class="container">
  <section class="mt-4 border p-3 rounded-2 bg-light">
    <h2 class="text-center">Edit Your Information</h2>
    <hr />
    
    <form class="mt-4" id="update-form">
      <div class="mb-3">
        <input
          type="text"
          class="form-control"
          id="firstName"
          placeholder={{user.firstName}}
        />
      </div>

      <div class="mb-3">
        <input
          type="text"
          class="form-control"
          id="lastName"
          placeholder={{user.lastName}}
        />
      </div>
       
       <div class="mb-3">
        <input
          type="username"
          class="form-control"
          id="username"
          placeholder={{user.username}}
          disabled="disabled"
        />
      </div>

      <div class="mb-3">
        <input
          type="email"
          class="form-control"
          id="email"
          placeholder={{user.email}}
          disabled="disabled"
        />
      </div>
      
      <div class="mb-3">
        <input
          type="password"
          class="form-control"
          id="password"
          placeholder={{user.password}}
          pattern="^(?=.*\d).{6,18}$"
        />
      </div>

      <div class="mb-3">
        <input
          type="password"
          class="form-control"
          id="confirmPassword"
          placeholder={{user.password}}
        />
      </div>

