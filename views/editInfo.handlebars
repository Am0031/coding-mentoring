<main class="container">
  <section class="mt-4 border p-3 rounded-2 bg-light">
    <h2 class="text-center">Edit Your Information</h2>
    <hr />
    
    <form class="mt-4" id="update-form" data-user-type="{{userType}}" data-user-id="{{currentUser.id}}">
      <div class="mb-3">
        <input
          type="text"
          class="form-control"
          id="firstName"
          value="{{currentUser.firstName}}"
        />
      </div>

      <div class="mb-3">
        <input
          type="text"
          class="form-control"
          id="lastName"
          value="{{currentUser.lastName}}"
        />
      </div>
       
       <div class="mb-3">
        <input
          type="username"
          class="form-control"
          id="username"
          value="{{currentUser.username}}"
          disabled="disabled"
        />
      </div>

      <div class="mb-3">
        <input
          type="emailAddress"
          class="form-control"
          id="email"
          value="{{currentUser.email}}"
          disabled="disabled"
        />
      </div>
      
      <div class="mb-3">
        <input
          type="password"
          class="form-control"
          id="password"
          value="{{currentUser.password}}"
          pattern="^(?=.*\d).{6,18}$"
          placeholder="Enter new password"
        />
      </div>

      <div class="mb-3">
        <input
          type="password"
          class="form-control"
          id="confirmPassword"
          value="{{currentUser.password}}"
          placeholder="Confirm new password"
        />
      </div>

