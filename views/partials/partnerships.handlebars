<div class="container ml-3 mr-3">
  <h1>My partnerships</h1>
  <div class="container partnership-card-container">
    {{#each userData}}
      <div class="card mb-3" id="partnership-container-{{id}}">
        <div
          class="d-flex flex-column justify-content-between align-items-center"
        >
          <div class="card-header d-flex flex-row align-items-stretch"><h4
              class="card-title mr-2"
            >{{projectName}}
              with
              {{mentee.username}}</h4>
            {{#each mentee.frameworks}}

              <p class="btn btn-dark mr-2 mb-0">{{frameworkName}}</p>

            {{/each}}
            <a
              class="btn btn-primary"
              data-bs-toggle="collapse"
              href="#collapse-partnership-{{id}}"
              role="button"
              aria-expanded="false"
              aria-controls="collapse-partnership-{{id}}"
              data-id="{{id}}"
            >
              View Details
            </a>
          </div>
          <div class="collapse" id="collapse-partnership-{{id}}">
            <div class="card card-body">
              <div
                class="card-body d-flex flex-column justify-content-center"
                id="task-details-container-{{id}}"
              >
                <div class="d-flex flex-column">
                  {{#each tasks}}
                    <div class="d-flex flex-row">
                      <p class="task-detail">{{taskName}}
                        -
                        {{taskLevel}}
                        -
                        {{points}}
                        XP - Deadline:
                        {{formatDate assignedTask.taskDeadline}}
                      </p>
                      <p>
                        Status:
                        <span
                          class="status-span"
                          id="span-task-{{assignedTask.id}}"
                        >{{formatStatus assignedTask.taskComplete}}</span></p>
                      <button
                        class="btn btn-primary"
                        name="change-status-btn"
                        id="status-btn-{{assignedTask.id}}"
                        data-id="{{assignedTask.id}}"
                      >Change status</button>
                    </div>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    {{/each}}
  </div>
</div>