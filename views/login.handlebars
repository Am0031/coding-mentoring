{{> publicNavBar}}

<div class="container login-container">
  <section class="mt-4 border p-3 rounded-2 bg-light">
    <h2 class="text-center">Login</h2>
    <hr />
    
    <div class="form-check" id="user-type">
      <input class="form-check-input" type="radio" name="user" id="mentee" checked>
      <label class="form-check-label mr-5" for="mentee">
        Mentee
      </label>
      
      <input class="form-check-input" type="radio" name="user" id="mentor">
      <label class="form-check-label mr-5" for="mentor">
        Mentor
      </label>
    </div>

    <hr />
    <form class="m-4" id="login-form">
      <div class="mb-3">
        <input
          type="email"
          class="form-control"
          id="email"
          placeholder="Enter email address"
        />
      </div>
      <div class="mb-3">
        <input
          type="password"
          class="form-control"
          id="password"
          placeholder="Enter password"
        />
      </div>
      <div id="login-error"></div>
      <div class="mb-5 text-center">
        <button type="submit" class="btn btn-primary">Login</button>
      </div>
      <div class="mb-3 text-center error-text">
        Don't have an account?</br>
        <a href="/signup">Sign up here.</a>
      </div>
      <div class="mb-3 text-center error-text">
        Forgot Password?</br>
        <a href="/reset-password">Reset Password Here.</a>
      </div>
    </form>
  </section>
</div>