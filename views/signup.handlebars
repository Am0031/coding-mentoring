      <div>
        <select class="form-select mb-3" id="availability" aria-label="availability">
          <option selected>Select availability*</option>
          <option value="weekdays">Weekdays</option>
          <option value="weekends">Weekends</option>
          <option value="both">Both</option>
        </select>
      </div>

      <div>
        <select class="form-select mb-3" id="collaborationFormat" aria-label="collaborationFormat">
          <option selected>Select collaboration format*</option>
          <option value="online">Online</option>
          <option value="in-person">In-Person</option>
          <option value="hybrid">Hybrid</option>
        </select>
      </div>
      
      <div>
        <select class="form-select mb-3" id="location" aria-label="location">
          <option selected>Select location*</option>
          <option value="weekdays">Birmingham</option>
          <option value="weekends">London</option>
          <option value="both">Manchester</option>
        </select>
      </div>

      <div class="mb-3">
        <input
          type="text"
          class="form-control"
          id="personalGoal"
          placeholder="Enter personal goal*"
        />
      </div>

      <div class="mb-3">
        <input
          type="text"
          class="form-control"
          id="profileImageUrl"
          placeholder="Enter profile image URL (optional)"
        />
      </div>

      <div class="mb-3">
        <input
          type="text"
          class="form-control"
          id="gitHubUrl"
          placeholder="Enter GitHub URL (optional)"
        />
      </div>

      <div id="signup-error"></div>

      <div class="mb-3 text-center">
        <button type="submit" class="btn btn-primary">Sign Up</button>
      </div>
      <div class="mb-3 text-center error-text">
        Already have an account?
        <a href="/login">Login here.</a>
      </div>

